{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "title": "Tema Aromas",
  "description": "Tema WordPress luxuoso, moderno e amigável para loja de aromaterapia",
  "settings": {
    "color": {
      "palette": [
        {
          "slug": "primary",
          "color": "#6b4fc4",
          "name": "Primária (Roxo)"
        },
        {
          "slug": "text",
          "color": "#000000",
          "name": "Texto (Preto Elegante)"
        },
        {
          "slug": "background",
          "color": "#ffffff",
          "name": "Fundo (Branco Premium)"
        },
        {
          "slug": "border",
          "color": "#e6e6e6",
          "name": "Borda (Cinza Suave)"
        },
        {
          "slug": "accent",
          "color": "#8b5fd6",
          "name": "Accent (Roxo Claro)"
        },
        {
          "slug": "gold",
          "color": "#d4af37",
          "name": "Dourado Premium"
        },
        {
          "slug": "gray-light",
          "color": "#f8f9fa",
          "name": "Cinza Claro"
        },
        {
          "slug": "gray-medium",
          "color": "#6c757d",
          "name": "Cinza Médio"
        },
        {
          "slug": "success",
          "color": "#28a745",
          "name": "Sucesso"
        },
        {
          "slug": "warning",
          "color": "#ffc107",
          "name": "Aviso"
        },
        {
          "slug": "error",
          "color": "#dc3545",
          "name": "Erro"
        }
      ],
      "gradients": [
        {
          "slug": "luxury-gradient",
          "gradient": "linear-gradient(135deg, #6b4fc4 0%, #8b5fd6 100%)",
          "name": "Gradiente Luxo"
        },
        {
          "slug": "gold-gradient",
          "gradient": "linear-gradient(135deg, #d4af37 0%, #ffd700 100%)",
          "name": "Gradiente Dourado"
        },
        {
          "slug": "subtle-gradient",
          "gradient": "linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%)",
          "name": "Gradiente Sutil"
        }
      ],
      "custom": true,
      "customGradient": true
    },
    "typography": {
      "fontFamilies": [
        {
          "slug": "primary",
          "fontFamily": "'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
          "name": "Inter (Principal)"
        },
        {
          "slug": "heading",
          "fontFamily": "'Playfair Display', Georgia, serif",
          "name": "Playfair Display (Títulos)"
        },
        {
          "slug": "system",
          "fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
          "name": "Sistema"
        }
      ],
      "fontSizes": [
        {
          "slug": "small",
          "size": "0.875rem",
          "name": "Pequeno"
        },
        {
          "slug": "medium",
          "size": "1rem",
          "name": "Médio"
        },
        {
          "slug": "large",
          "size": "1.125rem",
          "name": "Grande"
        },
        {
          "slug": "x-large",
          "size": "1.25rem",
          "name": "Extra Grande"
        },
        {
          "slug": "xx-large",
          "size": "1.5rem",
          "name": "XX Grande"
        },
        {
          "slug": "xxx-large",
          "size": "2rem",
          "name": "XXX Grande"
        },
        {
          "slug": "huge",
          "size": "2.5rem",
          "name": "Enorme"
        }
      ],
      "customFontSize": true,
      "lineHeight": true,
      "letterSpacing": true,
      "textDecoration": true,
      "textTransform": true,
      "dropCap": false
    },
    "spacing": {
      "spacingSizes": [
        {
          "slug": "xs",
          "size": "0.5rem",
          "name": "Extra Pequeno"
        },
        {
          "slug": "sm",
          "size": "1rem",
          "name": "Pequeno"
        },
        {
          "slug": "md",
          "size": "1.5rem",
          "name": "Médio"
        },
        {
          "slug": "lg",
          "size": "2rem",
          "name": "Grande"
        },
        {
          "slug": "xl",
          "size": "3rem",
          "name": "Extra Grande"
        },
        {
          "slug": "xxl",
          "size": "4rem",
          "name": "XX Grande"
        }
      ],
      "customSpacingSize": true,
      "units": ["px", "em", "rem", "vh", "vw", "%"]
    },
    "layout": {
      "contentSize": "800px",
      "wideSize": "1200px"
    },
    "border": {
      "radius": true,
      "color": true,
      "style": true,
      "width": true
    },
    "shadow": {
      "defaultPresets": false,
      "presets": [
        {
          "slug": "luxury",
          "shadow": "0 8px 32px rgba(107, 79, 196, 0.12)",
          "name": "Sombra Luxo"
        },
        {
          "slug": "subtle",
          "shadow": "0 2px 8px rgba(0, 0, 0, 0.08)",
          "name": "Sombra Sutil"
        },
        {
          "slug": "medium",
          "shadow": "0 4px 16px rgba(0, 0, 0, 0.1)",
          "name": "Sombra Média"
        },
        {
          "slug": "strong",
          "shadow": "0 12px 40px rgba(107, 79, 196, 0.2)",
          "name": "Sombra Forte"
        }
      ]
    },
    "custom": {
      "transitions": {
        "fast": "all 0.2s cubic-bezier(0.4, 0, 0.2, 1)",
        "smooth": "all 0.3s cubic-bezier(0.4, 0, 0.2, 1)",
        "slow": "all 0.5s cubic-bezier(0.4, 0, 0.2, 1)"
      },
      "borderRadius": {
        "small": "4px",
        "medium": "8px",
        "large": "12px",
        "round": "50%"
      }
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--background)",
      "text": "var(--wp--preset--color--text)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--primary)",
      "fontSize": "var(--wp--preset--font-size--medium)",
      "lineHeight": "1.6"
    },
    "spacing": {
      "blockGap": "var(--wp--preset--spacing--sm)"
    },
    "elements": {
      "h1": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--heading)",
          "fontSize": "clamp(2rem, 5vw, 3.5rem)",
          "fontWeight": "700",
          "lineHeight": "1.2",
          "letterSpacing": "-0.025em"
        },
        "spacing": {
          "margin": {
            "bottom": "var(--wp--preset--spacing--md)"
          }
        }
      },
      "h2": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--heading)",
          "fontSize": "clamp(1.5rem, 4vw, 2.5rem)",
          "fontWeight": "600",
          "lineHeight": "1.2"
        },
        "spacing": {
          "margin": {
            "bottom": "var(--wp--preset--spacing--sm)"
          }
        }
      },
      "h3": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--heading)",
          "fontSize": "clamp(1.25rem, 3vw, 2rem)",
          "fontWeight": "600",
          "lineHeight": "1.2"
        }
      },
      "h4": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--heading)",
          "fontSize": "clamp(1.125rem, 2.5vw, 1.5rem)",
          "fontWeight": "600"
        }
      },
      "h5": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--heading)",
          "fontSize": "var(--wp--preset--font-size--x-large)",
          "fontWeight": "600"
        }
      },
      "h6": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--heading)",
          "fontSize": "var(--wp--preset--font-size--large)",
          "fontWeight": "600"
        }
      },
      "link": {
        "color": {
          "text": "var(--wp--preset--color--primary)"
        },
        ":hover": {
          "color": {
            "text": "var(--wp--preset--color--accent)"
          }
        }
      },
      "button": {
        "color": {
          "background": "var(--wp--preset--color--primary)",
          "text": "var(--wp--preset--color--background)"
        },
        "border": {
          "radius": "8px"
        },
        "spacing": {
          "padding": {
            "top": "var(--wp--preset--spacing--sm)",
            "right": "var(--wp--preset--spacing--lg)",
            "bottom": "var(--wp--preset--spacing--sm)",
            "left": "var(--wp--preset--spacing--lg)"
          }
        },
        "typography": {
          "fontWeight": "600"
        },
        ":hover": {
          "color": {
            "background": "var(--wp--preset--color--accent)",
            "text": "var(--wp--preset--color--background)"
          }
        }
      }
    },
    "blocks": {
      "core/paragraph": {
        "spacing": {
          "margin": {
            "bottom": "var(--wp--preset--spacing--sm)"
          }
        }
      },
      "core/heading": {
        "spacing": {
          "margin": {
            "bottom": "var(--wp--preset--spacing--sm)"
          }
        }
      },
      "core/group": {
        "spacing": {
          "padding": {
            "top": "var(--wp--preset--spacing--md)",
            "right": "var(--wp--preset--spacing--md)",
            "bottom": "var(--wp--preset--spacing--md)",
            "left": "var(--wp--preset--spacing--md)"
          }
        }
      },
      "core/columns": {
        "spacing": {
          "margin": {
            "bottom": "var(--wp--preset--spacing--lg)"
          }
        }
      },
      "core/image": {
        "border": {
          "radius": "8px"
        }
      },
      "core/button": {
        "border": {
          "radius": "8px"
        },
        "shadow": "var(--wp--preset--shadow--luxury)"
      }
    }
  },
  "templateParts": [
    {
      "name": "header",
      "title": "Cabeçalho",
      "area": "header"
    },
    {
      "name": "footer",
      "title": "Rodapé",
      "area": "footer"
    }
  ]
}
